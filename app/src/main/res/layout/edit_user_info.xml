<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:padding="16dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/profile_edit"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/profile_edit_btn"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="프로필 변경"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:layout_marginTop="8dp"
        android:hint="새로운 비밀번호"
        android:inputType="textPassword"/>

    <Spinner
        android:id="@+id/editMbtiSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNewPassword"
        android:layout_marginTop="8dp"
        android:hint="MBTI 선택"/>

    <Spinner
        android:id="@+id/editHobbySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMbtiSpinner"
        android:layout_marginTop="8dp"
        android:hint="취미 선택"/>

    <Spinner
        android:id="@+id/editRegionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editHobbySpinner"
        android:layout_marginTop="8dp"
        android:hint="지역 선택"/>

</RelativeLayout>
